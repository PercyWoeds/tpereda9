<p class="bold big">
  Documentos a cancelar
</p>

  <table>
    <thead>
      <tr>
        <th class="small bordered_bottom bordered_right">
          Nro.Documento
        </th>
        <th class="small bordered_bottom bordered_right">
          Empleado 
        </th>
        
        <th class="small bordered_bottom bordered_right">
          Placa
        </th>
        
        
        <th class="small bordered_bottom bordered_right">
          Ubicacion 
        </th>
        <th class="small bordered_bottom bordered_right">
          Detalle
        </th>
        <th class="small bordered_bottom bordered_right">
          Comprobante 
        </th>
        
         <td class="small bordered_bottom bordered_right">
          Total 
         </td>
        
      </tr>
    </thead>
    <tbody>
      
      <% for product in @products %>
        <tr>
          <td class="small bordered_bottom bordered_right" style="width: 100px;">
            <a href="#" onclick="removeItemFromViatico(<%= product.i %>); return false;" title=<"Remover item "><%= product.code %></a>
            <a href="#" onclick="removeItemFromViatico(<%= product.i %>); return false;" title=<"Remover item">X</a>]
          </td>
          


          <td class="small bordered_bottom bordered_right">
            <%= product.employee.full_name %>
          </td>
          
         <td class="small bordered_bottom bordered_right">
            <%= product.truck.placa %>
          </td>
         
         <td class="small bordered_bottom bordered_right">
            <%= product.get_punto(product.ubication_id) %>
          </td>
           <td class="small bordered_bottom bordered_right">
              <%=product.detalle %>
          </td>
          
          <td class="small bordered_bottom bordered_right">
            <%= product.tm << "-" << product.comprobante %>
          </td>
         
          
          
          <td class="small bordered_bottom bordered_right">
            <%= money(product.importe) %>
          </td>
         
          
          
        </tr>
      <% end %>
    
    <tr>
      <td colspan="6" class="bordered_bottom bordered_right bold">
        Total:
      </td>
      <td class="bordered_bottom bordered_right bold right">
        <%= money(@total_pago1) %>    
      </td>      
    </tr>

  
      <tr>
      <td colspan="6" class="bordered_bottom bordered_right bold">
       Saldo  :
      </td>
      <td class="bordered_bottom bordered_right bold right">
          <%= money(@diferencia) %>   
      </td>
      
    </tr>

    </tbody>
  </table>



