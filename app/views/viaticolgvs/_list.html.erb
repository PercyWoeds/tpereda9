<% if @viaticolgvs.count > 0 %>
  <table>
    <thead>
      <tr>
        <th class="bordered_right bordered_bottom" style="width: 100px;">
         Orden
        </th>
        <th class="bordered_right bordered_bottom">
          Saldo Inicial 
        </th>
        <th class="bordered_right bordered_bottom">
          Total Ingreso
        </th>
        <th class="bordered_right bordered_bottom">
          Total Egreso
        </th>
        <th class="bordered_right bordered_bottom">
          Saldo Final 
        </th>
        
        <th class="bordered_right bordered_bottom">
          Fecha 
        </th>
        <th class="bordered_right bordered_bottom">
          Aprobado 
        </th>
        
        <th class="bordered_right bordered_bottom" colspan="3">
          Opciones 
        </th>
        
      </tr>
    </thead>
    <tbody>
    
      <% for viaticolgv  in @viaticolgvs %>
        <tr>
          <td class="bordered_right bordered_bottom">
            <%= link_to viaticolgv.code, viaticolgv, :title => "Ir a factura" %>
          </td>
          
          <td class="small bordered_bottom bordered_right">
            <%= money(viaticolgv.inicial) %>
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= money(viaticolgv.total_ing) %>
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= money(viaticolgv.total_egreso) %>
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= money(viaticolgv.saldo) %>
          </td>

          
          <td class="bordered_right bordered_bottom">
            <%= viaticolgv.fecha1.strftime("%d/%m/%Y")  %>
          </td>
          <td class="bordered_right bordered_bottom <%= viaticolgv.processed_color %>">
            <%= viaticolgv.get_processed_short %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= link_to "Ver", viaticolgv %>
          </td>
          <td class="bordered_right bordered_bottom">  
            <%= link_to 'Editar',edit_viatico_path(viaticolgv) %>
          </td>
          <td class="bordered_right bordered_bottom">  
          <%= link_to 'Eliminar', viaticolgv, :data=> {:confirm => 'Esta seguro ?'}, :method => :delete  %>           
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="error">
    We couldn't find any viaticolgv.
  </p>
<% end %>