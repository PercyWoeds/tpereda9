<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;

<%= hr() %>
  
   <p class="bold big"> Seleccionar Facturas 
   </p>
  
 <% if @mines %>

 	<table class="search-results-table col-md-12">
		<tbody>

  	<tr>

  	<td><strong>Cliente:</strong> <%= @mines.customer.name %></td>
  	<td><strong>RUC:</strong> <%= @mines.customer.ruc %></td>


    <div class="field">
      <strong> Concepto de Cobranza  :</strong><br />    
      
      <%= select_tag(:concept_id,options_from_collection_for_select(@concepts,'id','descrip')) %>

    </div>

  
    <div class="field">
      <strong>Documento :</strong><br />          
  <%= select_tag(:document_id,options_from_collection_for_select(@documents,'id','description'))%>
