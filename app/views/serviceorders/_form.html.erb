<%= render 'layouts/autocomplete' %>

<script type="text/javascript">



  $(document).ready(function() {
    $("#ac_supplier").autocomplete("/serviceorders/ac_suppliers/<%= @company.id %>", {
			matchSubset: 1,
			matchContains: 1,
      selectFirst: false
    });
    
    $("#ac_supplier").result(function(event, data, formatted) {
      $("#ac_supplier_id").val(data[2]);
      $("#selected_supplier").html(data[0]);
    });
    
    
    $("#ac_user").autocomplete("/serviceorders/ac_user/<%= @company.id %>", {
			matchSubset: 1,
			matchContains: 1,
      selectFirst: false
    });
    
    $("#ac_user").result(function(event, data, formatted) {
      $("#ac_user_id").val(data[2]);
      $("#selected_seller").html(data[0]);
    });
    
    
    $("#ac_item_quantity").bind("keyup", function() {
      updateItemTotal4();
    });
    
    $("#ac_item_price").bind("keyup", function() {
      updateItemTotal4();
    });
    
    $("#ac_item_discount").bind("keyup", function() {
      updateItemTotal4();
    });
    
    
    
    $('#ac_item_id').change(function() {
      $.ajax({
        url: "/servicebuys/update_serviceext",
        data: {
          servicebuy_id : $('#ac_item_id').val()
        },
        dataType: "script"
      });
    });
    
    <% if @suppliers_lines %>

      listItemsserviceorder();

    <% end %>
  });



   function listItemsserviceorder() {
    var items = $("#items").val();
    var company_id = "1";
    
    $.get('/serviceorders/list_items/' + company_id, {
      items: items
    },
    function(data) {
      $("#list_items").html(data);
      documentReady();
    });
  }



</script>