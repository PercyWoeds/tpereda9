<div class="breadcrumbs">
  <%= link_to "My companies", "/companies" %> &raquo;
  <%= link_to @company.name, @company %> &raquo;
  <%= link_to "serviceorders", "/companies/serviceorders/#{@company.id}" %> &raquo;
  <%= link_to @serviceorder.identifier, @serviceorder %>
</div>

<h1>
  <%= image_tag("invoice_48.png", :class => "vmiddle") %>
  Send serviceorder via email
</h1>

<%= hr() %>

<h3>
  <%= link_to @serviceorder.identifier, @serviceorder %>
</h3>

<%= hr() %>

<form method="post" action="/serviceorders/do_email/<%= @serviceorder.id %>">
  <strong>Email:</strong>
  <input type="text" name="email" value="<%= @serviceorder.customer.email %>" onclick="$(this).select();" />
  <input type="submit" value="Send" class="bold" />
</form>

<%= hr() %>

<div class="button">
  <%= link_to 'Show serviceorder', @serviceorder %>
  <%= link_to 'Back', "/companies/serviceorders/#{@company.id}" %>
</div>