<% if @lvts.count > 0 %>
  <table>
    <thead>
      <tr>
        <th class="bordered_right bordered_bottom" style="width: 100px;">
         Orden
        </th>
        <th class="bordered_right bordered_bottom">
          Cliente 
        </th>
        <th class="bordered_right bordered_bottom">
          Total 
        </th>
        <th class="bordered_right bordered_bottom">
          Fecha 
        </th>
        
        <th class="bordered_right bordered_bottom">
          Aprobado 
        </th>
        <th class="bordered_right bordered_bottom" colspan="3">
          Opciones 
        </th>
      </tr>
    </thead>
    <tbody>
    
      <% for lvt  in @lvts %>
        <tr>
          <td class="bordered_right bordered_bottom">
            <%= link_to lvt.code, lvt, :title => "Ir a factura" %>
          </td>
       
          <td class="small bordered_bottom bordered_right">
            <%= money(lvt.inicial) %>
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= money(lvt.total_ing) %>
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= money(lvt.total_egreso) %>
          </td>
          <td class="small bordered_bottom bordered_right">
            <%= money(lvt.saldo) %>
          </td>

          
          <td class="bordered_right bordered_bottom">
            <%= lvt.fecha.strftime("%d/%m/%Y")  %>
          </td>
          <td class="bordered_right bordered_bottom <%= lvt.processed_color %>">
            <%= lvt.get_processed_short %>
          </td>
          <td class="bordered_right bordered_bottom">
            <%= link_to "Ver", lvt %>
          </td>
          <td class="bordered_right bordered_bottom">  
          
            
          <%= link_to 'Eliminar', lvt, :data=> {:confirm => 'Esta seguro ?'}, :method => :delete  %>           
                  
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="error">
    We couldn't find any lvt.
  </p>
<% end %>