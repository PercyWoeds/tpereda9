                      <td width = "5%" align ="center"> S/. </td>
                      <td width = "5%" align ="center">  </td>
                    <% end %>
                    
                  
                      <% lcsubtotal = detalle.subtotal  %>
                      <% lctax =  detalle.tax   %>
                      <% lctotal = detalle.total  %>
                   

                <td width = "10%" align ="right"><%= sprintf("%.2f",lcsubtotal)   %></td>
