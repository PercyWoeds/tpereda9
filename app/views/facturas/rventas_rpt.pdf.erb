      <% tax =  0%>
      <% total =  0%>
      
       <% for  detalle in @facturas_rpt  %>
       
                    <tr>
                    <td width= "4%" ><%= nroitem   %></td>
                    <td width= "8%" >    </td>
                    <td width = "8%" align ="center"> </td>

                    
                    <td width = "8%" align ="left"><%= detalle.customer.ruc   %> </td>
