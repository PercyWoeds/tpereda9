<p id="notice"><%= notice %></p>

<h1>Listado  Vehiculos</h1>


<h4>Buscar </h4>

<%= form_tag(trucks_path, method: :get )  do %>
  <%= text_field_tag(:search, params[:search])%>
  <%= submit_tag("Buscar ")%>

<% end %>


<%= link_to "Clear" , trucks_path %>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Placa</th>
     
     
      <th>Certificado</th>
      <th>Ejes</th>
      <th>Licencia</th>
      <th>Neumatico</th>
     
      <th>Propio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.code %></td>
        <td><%= truck.placa %></td>
        <td><%= truck.certificado %></td>
        <td><%= truck.ejes %></td>
        <td><%= truck.licencia %></td>
        <td><%= truck.neumatico %></td>
       
        <td><%= truck.propio %></td>
        <td><%= link_to 'Ver', truck %></td>
        <td><%= link_to 'Editar', edit_truck_path(truck) %></td>
        
         <%if @current_user.level == 'admin' %>
        <td><%= link_to 'Eliminar', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= will_paginate @customers %>

 <div class="button">

<%= link_to 'Nuevo Vehiculo', new_truck_path %>

</div>




