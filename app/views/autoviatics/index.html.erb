<h1>Autorizacion de viaticos</h1>

<table>
  <thead>
    <tr>

      <th>Location</th>
      <th>Proyecto minero</th>
      <th>Employee</th>
      <th>Fecha</th>
      <th>Tema</th>
      <th>Supplier</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @autoviatics.each do |autoviatic| %>
      <tr>
        <td><%= autoviatic.location.name %></td>
        <td><%= autoviatic.proyecto_minero.descrip %></td>
        <td><%= autoviatic.employee.full_name  %></td>
        <td><%= autoviatic.fecha.strftime("%d/%m/%Y") %></td>
        <td><%= autoviatic.tema %></td>
        <td><%= autoviatic.supplier.name %></td>
        
        <td><%= link_to 'Ver', autoviatic %></td>
        <td><%= link_to 'Editar', edit_autoviatic_path(autoviatic) %></td>
        <% if current_user.level == "admin"  %> 
        <td><%= link_to 'Destroy', autoviatic, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

