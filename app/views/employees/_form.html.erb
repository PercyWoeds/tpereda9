<%= render 'layouts/autocomplete' %>

  <script type="text/javascript">


$(document).ready(function() {
  
 
   
    $("#ac_distrito").autocomplete("/employees/ac_distritos/<%= @company.id %>", {
      matchSubset: 1,
      matchContains: 1,
      selectFirst: false
    });
    
    $("#ac_distrito").result(function(event, data, formatted) {
      $("#ac_distrito_id").val(data[2]);
      $("#selected_distrito").html(data[0]);
    });        
    

  });
  
  </script>