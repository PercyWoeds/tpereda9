<%= simple_form_for( @requerimiento ) do  |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

 <table style="width:100%">
 
  <tr>
    <td>Nombre:</td>
    <td>  <%= f.collection_select :employee_id, @empleados, :id, :full_name, :prompt => true %></td>
    <td>Fecha</td>
    <td>  <%= f.date_field :fecha  %>
    </td>
  </tr>
  <tr>
    <td>Area</td>
    <td> <%= f.collection_select :division_id, @divisions, :id, :name, :prompt => true %></td>
    <td>Hora</td>
    <td> <%= f.text_field :hora %></td>
  </tr>
</table> 
    


      <div class="field">
    <%= f.label :nota %><br />
    <%= f.text_field :nota,:size=> "120" %>
  </div>

  </div>




  <table>
    <tr>
   <th style="width: 5%">Item </th>
   <th style="width: 10%">Codigo </th>
   <th style="width: 10%">Cantidad </th>
   <th style="width: 10%">Unidad </th>
   <th style="width: 50%">Descrip </th>
   <th style="width: 15%">Placa/Destino </th>
   <% nroitem = 1%>
   </tr>

    <%= f.fields_for :rqdetails  do |rq_fields| %>
    
    <tr>

    <td style="width: 5%">  <%= nroitem %> </td>
    <td style="width: 10%">  <%= rq_fields.text_field :codigo , :size=>"10" %></td>
    <td style="width: 10%">  <%= rq_fields.number_field :qty , :size=>"10"%></td>
    <td style="width: 10%">  <%= rq_fields.select :unidad_id,options_from_collection_for_select(@unidads,'id','descrip') %></td>
    <td style="width: 50%"> <%= rq_fields.text_field :descrip  , :size=>"55"%></td>
    <td style="width: 15%"> <%= rq_fields.text_field :placa_destino , :size=>"25" %></td>
    
    </tr>
  

    <% nroitem +=1 %>
    <% end %>

  </table>
  
  <div class="field">
    <%= f.label :observa %><br />
    <%= f.text_area :observa,:size=>"120" %>
  </div>
  


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

