<p id="notice"><%= notice %></p>

<h1>Aviso de Pagos</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Employee</th>
      <th>Proveedor </th>
      <th>Asunto</th>
      <th>Fecha</th>
      <th>Concepto</th>
      <th>Total</th>
      <th>Processed</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_notices.each do |payment_notice| %>
      <tr>
        <td><%= payment_notice.code %></td>
        <td><%= payment_notice.employee.full_name  %></td>
        <td><%= payment_notice.supplier.name  %></td>
        <td><%= payment_notice.asunto %></td>
        <td><%= payment_notice.fecha %></td>
        <td><%= payment_notice.concepto %></td>
        <td><%= payment_notice.total %></td>
         <td class="bordered_right bordered_bottom <%= payment_notice.processed_color %>">
            <%= payment_notice.get_processed_short %>
          </td>

        
        <td><%= link_to 'Ver', payment_notice %></td>
        
      

        <td><%= link_to 'Eliminar ', payment_notice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment notice', new_payment_notice_path %>
