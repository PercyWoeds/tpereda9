</div>




<script>

$(document).ready(function() {
  
  if ($('#check_prov').is(":checked")) {
      $('#supplier_select').attr('disabled', true); //disable input
   }
   else {
      $('#supplier_select').removeAttr('disabled'); //enable input
   }
   
   
   $('#check_prov').click(function () {
        //check if checkbox is checked
        if ($(this).is(':checked')) {

           $('#supplier_select').attr('disabled', true); //disable input

        } else {
             $('#supplier_select').removeAttr('disabled'); //enable input
            
        }
    });


  });

  </script>